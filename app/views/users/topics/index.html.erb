<div class="container mt-5">
 <div class="row">
  <div class="col-3">
  <h5><strong>タグ一覧</strong></h5>
  </div>
  <div class="col-6"><h2 class="border-bottom mb-3"><strong>話題一覧</strong></h2>
   <% @topics.each do |topic| %>
    <h5>
    <%= link_to topic_path(topic.id) do %>
     <%= topic.name %>
    <% end %>
    </h5>
    <p style="color: #6e6e6e;">
     <%= topic.overview %>
     　<%= link_to "#{topic.topic_comments.count} コメント", topic_path(topic.id) %>
     　<%= topic.created_at.strftime('%Y/%m/%d/%H:%M:%S') %>
    </p>
   <% end %>
 </div>
 <div class="col-3">
  <h5><strong>いちおし話題</strong></h5>
 </div>
</div>