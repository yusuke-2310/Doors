<div class="container mt-5">
  <div class="row">
   <div class="px-5 mx-auto">
    <%= form_with model: @my_page, url: my_page_path(current_user), method: :patch do |f| %>
  　 <table cellpadding="10">
    　<tr>
       <td><h2><strong>マイページ</strong></h2></td>
       <td></td>
      </tr>
      <tr>
       <td>
        <% if @my_page.errors.any? %>
         <%= @my_page.errors.count %>件のエラーが発生しました
          <ul>
           <% @my_page.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
          </ul>
        <% end %>
       </td>
      </tr>
      <tr>
       <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
       <td></td>
      </tr>
      <tr>
       <td>ユーザーネーム</td>
       <td><%= f.text_field :name, autoforus: true, id:"inputName", placeholder:"名前" %></td>
      </tr>
      <tr>
       <td>email</td>
       <td><%= f.text_field :email, autoforus: true, id:"inputEmail", placeholder:"Email" %></td>
      </tr>
      <tr>
       <td></td>
       <td><%= f.submit "変更を保存" %></td>
      </tr>
  　</table>
   <% end %>
  </div>
 </div>
</div>