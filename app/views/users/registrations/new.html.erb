<div class="container mt-5">
  <div class="row">
    <div class="px-5 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <table cellpadding="10">
          <th>
           <td><h2>Sign up</h2></td>
           <td></td>
           <td></td>
           <td></td>
          </th>
          <tr>
           <td>
            <div class="field">
             <td><%= f.label :name %></td>
             <td><%= f.text_field :name %></td>
            </div>
           </td>
          </tr>
          <tr>
           <td>
            <div class="field">
             <td><%= f.label :email %></td>
             <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </div>
           </td>
          </tr>
          <tr>
           <td>
            <div class="field">
             <td><%= f.label :password %>
              <% if @minimum_password_length %>
              <em><% @minimum_password_length %></em>
              <% end %><br/></td>
             <td><%= f.password_field :password, placeholder: "6文字以上", autocomplete: "new-password" %></td>
            </div>
           </td>
          </tr>
          <tr>
           <td>
             <div class="field">
              <td><%= f.label :password_confirmation %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
             </div>
           </tr>
          </tr>
          <tr>
           <td>
           <td>
           <td class="text">
            <div class="actions">
              <%= f.submit "Sign up" %>　　<%= render "users/shared/links" %>
            </div>
           <td>
          </tr>
      <% end %>
    </div>
  </div>
</div>
